{
  "version": 2,
  "public": true,
  "name": "spar-ng",
  "alias": ["firengapp"],
  "github": {
    "autoAlias": true
  },
  "builds": [
    {
      "src": "package.json", "use": "@now/static-build",
      "config": {
        "distDir": "dist/",
        "useBuildUtils": "@now/build-utils@canary"
      }
    },
    { "src": "./src/app/server/*.ts", "use": "@now/node"}
  ],
  "routes": [
    
    { "src": "/api/(.*)", "dest": "/src/app/server/$1" },
    { "src": "/", "methods": ["GET"] ,"dest": "/dist/$1" },
    { "src": "/users", "methods": ["GET"] ,"dest": "/src/app/server/index.ts" },
    { "src": "/login", "methods": ["POST"] ,"dest": "/src/app/server/index.ts" },
    { "src": "/(.*)", "methods": ["GET"], "dest": "/dist/index.html"}
  ]
}

