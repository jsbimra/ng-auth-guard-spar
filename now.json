{
  "version": 2,
  "public": true,
  "name": "spar-ng",
  "alias": ["firengapp"],
  "github": {
    "autoAlias": true
  },
  "builds": [
    {
      "src": "package.json", "use": "@now/static-build", 
      "config": {
        "distDir": "dist/"
      }
    },
    { "src": "./src/app/server/*.ts", "use": "@now/node@0.4.28-canary.6"}
  ],
  "routes": [
    { "src": "/users", "methods": ["GET"] ,"dest": "/src/app/server/index.ts" },
    { "src": "/login", "methods": ["POST"] ,"dest": "/src/app/server/index.ts" },
    { "src": "/api/(.*)", "dest": "/src/app/server/$1" },
    { "src": "/", "methods": ["GET"] ,"dest": "/$1" },
    { "src": "/(.*)", "methods": ["GET"], "dest": "index.html"}
  ]
}

